<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kidinformation"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kidid"
            android:text="KID ID:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kididcheck"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kidname"
            android:layout_marginLeft="20dp"
            android:text="KID NAME:"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kidnamecheck"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kidhospital"
            android:layout_marginLeft="20dp"
            android:text="KID BIRTH HOSPITAL NAME:"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kidhospitalcheck"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kidbirthweight"
            android:layout_marginLeft="20dp"
            android:text="KID BIRTH WEIGHT:"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kidweightcheck"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kidbg"
            android:layout_marginLeft="20dp"
            android:text="KID BLOOD GROUP:"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kidbgcheck"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kidbd"
            android:layout_marginLeft="20dp"
            android:text="KID BIRTHDATE:"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kidbdcheck"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kidbt"
            android:layout_marginLeft="20dp"
            android:text="KID BIRTHTIME:"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kidbtcheck"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="View Vaccine Progress"
            android:backgroundTint="#9AD3F4"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/viewvaccine"
            />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Update Vaccine Progress"
            android:backgroundTint="#9AD3F4"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/vaccineprogress"
            />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Logout"
            android:backgroundTint="#9AD3F4"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/logout"
            />


    </LinearLayout>



</ScrollView>